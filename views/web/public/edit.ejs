<div class="text-success">
  <h3 class="text-muted">文章编辑</h3>
  <form method="post" action="/edit/<%= post.name %>/<%= post.time.minute %>/<%= post.title %>">
    <label>标题：</label><br>
    <input type="text" name="title" value="<%= post.title %>" disabled="disabled"><br>
    <label>正文：</label><br>
    <textarea name="post" cols="100" rows="10"><%= post.post %></textarea>
    <button type="submit" class="btn btn-primary">提交</button>
    <a href="/" type="submit" class="btn btn-default">返回</a>
  </form>
</div>